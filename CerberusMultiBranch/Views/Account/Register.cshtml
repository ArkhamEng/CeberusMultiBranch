@model CerberusMultiBranch.Models.RegisterViewModel
@{
    ViewBag.Title = "Registro de usuario";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<div class="col-md-12">
    <h3 class="text-info">
        <span class="fa fa-user" style="float:left"></span>
        &nbsp;&nbsp;
        Registro de usuario
    </h3>
    <hr />
</div>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()


    <div class="col-md-12">
        <div class="panel panel-danger">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-md-offset-1">
                        @Html.LabelFor(m => m.Comission, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-percent"></i></span>
                            @Html.TextBoxFor(m => m.Comission, new { @class = "form-control", type = "number" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 ">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-md-3 col-md-offset-1">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-phone-square"></i></span>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-3">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-md-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary" onclick="window.location='@Url.Action("UserList")'" title="Volver al listado">
                        <span class="fa fa-search-plus"></span>
                    </button>
                    <button type="submit" class="btn btn-warning" title="Registrar usuario">
                        <span class="fa fa-user-plus"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row col-md-6">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>

    
}
