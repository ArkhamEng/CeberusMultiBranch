@model ICollection<CerberusMultiBranch.Models.Entities.Operative.Sale>

@{
    ViewBag.Title = "Pagos y notas";
}

<h3>
    <span class="fa fa-credit-card-alt" style="float:left"></span>
    &nbsp;&nbsp;Pagos y notas
</h3>

<div class="col-md-7">
    <div class="input-group ">
        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
        @Html.TextBox("txtFilter", "", htmlAttributes: new { @class = "form-control" })
        <span class="input-group-btn">
            <button class="btn btn-default" type="button" id="btnSearch" title="Buscar">
                <span class="glyphicon glyphicon-search"></span>
            </button>
            <button class="btn btn-default" type="button" title="Recargar página" onclick="Reload()">
                <span class="glyphicon glyphicon-refresh"></span>
            </button>
            <button id="btnFilter" type="button" class="btn btn-warning" data-toggle="collapse" data-target="#divFilters" title="Mostras filtros">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>
        </span>
    </div>
</div>


<br /><br /><br />

<div id="divFilters" class="col-md-4  collapse">
    <div class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
               
                <div class="form-group col-md-12">
                    @Html.Label("Desde", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("BeginDate", "", htmlAttributes: new { @class = "form-control", type = "date" })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Hasta", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("EndDate", "", htmlAttributes: new { @class = "form-control", type = "date" })
                    </div>
                </div>


                <div class="form-group col-md-12">
                    @Html.Label("Folio", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Folio", "", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="divSalesToPay">
    @Html.Partial("_SalesToPayList",Model)
</div>
<script>
    $(document).ready(function ()
    {
        SetFilterControls("#divFilters", "#btnFilter", "#divSalesToPay");

        $("#btnSearch").click(function ()
        {
            ShowLoading();
            var data = {
                begin: $("#BeginDate").val(),
                end: $("#EndDate").val(),
                folio: $("#Folio").val()
            };
            ExecuteAjax('@Url.Action("SearchPayment")', data, function (view)
            {
                $("#divSalesToPay").html(view);
            });
            
        });
    });

    function Reload()
    {
        ShowLoading();
        window.location = '@Url.Action("PaymentAndNote")';
    }


</script>

