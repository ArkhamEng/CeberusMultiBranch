@model ICollection<CerberusMultiBranch.Models.Entities.Operative.Sale>

@{
    ViewBag.Title = "Pagos y notas";
    ViewBag.Class = "fa fa-credit-card-alt";
}

<hr />
<div id="pnlFilters" class="panel panel-danger top">
    <div class="panel-body">
        <div class="col-md-10">
            <div class="input-group">
                @Html.TextBox("Folio", "", htmlAttributes: new { @class = "form-control", placeholder = "Folio de venta",
       style = "width:30% !important"   })
                @Html.TextBox("Client", "", htmlAttributes: new { @class = "form-control",placeholder="Nombre del cliente",
       style = "width:70% !important"})
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnSearch" title="Buscar">
                        <span class="glyphicon glyphicon-search"></span>
                        <u>B</u>uscar
                    </button>
                </span>
            </div>
        </div>
        <br /><br /><br />
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-addon"><a>Fecha Inicial</a></span>
                @Html.TextBox("BeginDate", "", htmlAttributes: new { @class = "form-control", type = "date"})

                <span class="input-group-addon"><a>Fecha final</a></span>
                @Html.TextBox("EndDate", "", htmlAttributes: new { @class = "form-control", type = "date"})
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button"  onclick="Reload()" id="btnClear">
                        <span class="glyphicon glyphicon-refresh"></span>
                        <u>L</u>impiar
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>


<div id="divSalesToPay">
    @Html.Partial("_SalesToPayList", Model)
</div>
<script>
    $(document).ready(function ()
    {
        $("#btnSearch").click(function () {
            ShowLoading();
            var data = {
                begin: $("#BeginDate").val(),
                end: $("#EndDate").val(),
                folio: $("#Folio").val(),
                client: $("#Client").val()
            };
            ExecuteAjax('@Url.Action("SearchPayment")', data, function (view) {
                HideLoading();
                $("#divSalesToPay").html(view);
            });

        });
    });

    function Reload()
    {
        ShowLoading();
        window.location = '@Url.Action("PaymentAndNote")';
    }

    $(document).keydown(function (e)
    {
        if (e.which == 13 || (e.altKey && e.which == 66)) {
            $("#btnSearch").click();
        }

        if (e.altKey && e.keyCode == 76) {
            ShowLoading();
            $("#btnClear").click();
        }
    });


</script>

