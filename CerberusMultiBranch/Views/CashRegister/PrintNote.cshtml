@model CerberusMultiBranch.Models.Entities.Operative.Sale
@using CerberusMultiBranch.Support;

@{
    ViewBag.Title = "Nota de venta";
}

<script src="~/Scripts/printThis.js"></script>

<hr />

<div id="divNote" style="width:816px;">
    <table class="Note">
        <tr>
            <td width="300px">
                <table style="width:100%">
                    @if (User.Identity.GetBranchId() != 2)
                    {
                        <tr>
                            <td>
                                <img src="~/Content/Images/logo2.png" style="width:150px">
                            </td>
                        </tr>
                        <tr><td colspan="2" style="height:10px"></td></tr>
                        <tr>
                            <td>
                                <label class="control-label">
                                    Autopartes Bicentenario S.A. de C.V.
                                </label><br />
                                APB 1000811 4Q4 <br />AV DE LA MANCHA 568 INT. 11-B<br />
                                LOMAS DE ZAPOPAN 45130 <br />ZAPOPAN JAL MX
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                <img src="~/Content/Images/rebilogo2.png" style="width:180px; height:90px">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label">
                                    AUTOPARTES BICENTENARIO
                                </label><br />
                                HEME950906491 <br />AV MANUEL CARPIO ESQ. AQUILES SERDAN<br />
                                COLONIA CENTRO C.P. 95499 <br />COSAMALOAPAN, VER.
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td width="292px" align="center">
                @if (User.Identity.GetBranchId() != 2)
                {
                    <div style="width:250px">
                        <label>Expedida en sucursal</label><br />
                        @Model.Branch.Address
                    </div>
                }
            </td>
            <td width="244px">
                <table style="width:100%" class="table-bordered">
                    <tr>
                        <td colspan="2" class="text-center">
                            <label>Datos de venta</label>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">
                            <label>Folio</label>
                        </td>
                        <td class="text-center">
                            <label>Fecha</label>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center">
                            @Model.Folio
                        </td>
                        <td class="text-center">
                            @Model.TransactionDate.ToString("dd/MM/yyyy HH:mm")
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="text-center">
                            <label>Agente</label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="text-center">
                            @Model.User.UserName
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="text-center">
                            <label>Tipo de pago:</label> @Model.PaymentType
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
        <tr>
            <td colspan="3" style="height:20px"></td>
        </tr>
        <tr>
            <td colspan="3">
                <table style="width:816px;border:1px solid gray;" class="table-bordered">
                    <tr>
                        <td colspan="3" class="text-center">
                            <label>Datos del cliente</label>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%" class="text-center">
                            <label>Nombre del cliente</label>
                        </td>
                        <td style="width:50%" class="text-center">
                            <label>Dirección del cliente</label>
                        </td>
                        <td style="width:20%" class="text-center">
                            <label>R.F.C.</label>
                        </td>
                    </tr>
                    <tr style="height:60px">
                        <td valign="top">
                            @Model.Client.Name
                        </td>
                        <td valign="top">
                            @Model.Client.TaxAddress
                        </td>
                        <td valign="top" class="text-center">
                            @Model.Client.FTR
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td colspan="3" style="height:20px"></td>
        </tr>
        <tr>
            <td class="text-center" style="border:1px solid gray;" colspan="3">
                <label>Detalle de compra</label>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <table style="width:100%; height:600px; border:1px solid gray;">
                    <tr style="border-bottom:1px solid gray; height:15px">
                        <td style="border-right:1px solid gray; width:10%" align="center">
                            <label>Codigo</label>
                        </td>
                        <td style="border-right:1px solid gray; width:10%" align="center">
                            <label>Cve. Sat</label>
                        </td>
                        <td style="border-right:1px solid gray; width:40%" align="center">
                            <label>Descripción</label>
                        </td>
                        <td style="border-right:1px solid gray; width:10%" align="center">
                            <label>Precio</label>
                        </td>
                        <td style="border-right:1px solid gray; width:10%" align="center">
                            <label>Cantidad</label>
                        </td>
                        <td style="width:10%">
                            <label>Total</label>
                        </td>
                    </tr>
                    @foreach (var item in Model.SaleDetails)
                    {
                        string st = "height:20px";
                        if (item.ParentId == null)
                        {
                            st = "height:20px;";
                        }

                        <tr style="@st">
                            <td class="text-center" style="border-right:1px solid gray; width:10%" valign="top">
                                @Html.DisplayFor(mItem => item.Product.Code)
                            </td>
                            <td class="text-center" style="border-right:1px solid gray; width:10%" valign="top">
                                @Html.DisplayFor(mItem => item.Product.Category.SatCode)
                            </td>
                            <td style="border-right:1px solid gray; width:40%" valign="top">
                                @item.Product.Name.Substring(0, item.Product.Name.Length <= 30 ? item.Product.Name.Length : 30)
                            </td>
                            <td class="text-right" style="border-right:1px solid gray; width:10%" valign="top">
                                @Html.DisplayFor(mItem => item.Price)
                            </td>
                            <td class="text-center" style="border-right:1px solid gray; width:10%" valign="top">
                                @Html.DisplayFor(mItem => item.Quantity)
                            </td>
                            <td class="text-right" style="width:10%" valign="top">
                                @Html.DisplayFor(mItem => item.Amount)
                            </td>
                        </tr>
                    }
                    <tr>
                        <td style="border-right:1px solid gray;" />
                        <td style="border-right:1px solid gray;" />
                        <td style="border-right:1px solid gray;" />
                        <td style="border-right:1px solid gray;" />
                        <td style="border-right:1px solid gray;" />
                        <td />
                    </tr>

                    <tr style="height:23px; border-top:1px solid gray;">
                        <td colspan="4" rowspan="3">
                            IMPORTE CON LETRA <br />
                            @Model.TotalAmount.toText()
                            PESOS MEXICANOS
                        </td>
                        @{
                            var bI = Math.Round(Model.TotalAmount / 1.16, 2);
                            var iva = Math.Round(Model.TotalAmount - bI, 2);
                        }
                        <td class="text-right" style="border:1px solid gray; width:10%">
                            <label class="control-label">
                                @Html.DisplayName("Sub-Total")
                            </label>
                        </td>
                        <td class="text-right" style="border:1px solid gray; width:10%">
                            @bI.ToString("c")
                        </td>
                    </tr>
                    <tr style="height:23px">
                        <td class="text-right" style="border:1px solid gray; width:10%">
                            <label>
                                @Html.DisplayName("IVA")
                            </label>
                        </td>
                        <td class="text-right" style="border:1px solid gray; width:10%">
                            @iva.ToString("c")
                        </td>
                    </tr>
                    <tr style="height:23px">

                        <td class="text-right" style="border:1px solid gray; width:10%">
                            <label>
                                @Html.DisplayName("Total")
                            </label>
                        </td>
                        <td class="text-right" style="border:1px solid gray; width:10%">
                            <label class="control-label text-danger">
                                @Model.TotalAmount.ToString("c")
                            </label>
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
        <tr>
            <td colspan="3">
                <label>
                    Solo se acepta mercancía en devolución si cumple con las siguientes políticas:
                </label>
                <br />
                1. Mercancía sin daño o retrabajo<br />
                2. Mercancía con empaque original<br />
                3. Cuenta con un máximo de 30 días fecha factura<br />
                4. Contar con la autorización de su ejecutivo de venta
            </td>
        </tr>
    </table>
</div>
<div hidden>
    <div id="divTicket" style="width:270px;">
        <table class="Ticket" style="width:100%">
            <tr>
                <td align="center" colspan="2">
                    <div style="width:200px">
                        <img src="~/Content/Images/logo2.png" class="img-responsive" />
                    </div>
                </td>
            </tr>

            <tr>
                <td align="center" colspan="2">
                   Sucursal @Model.Branch.Name
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    @Model.Branch.Address
                </td>
            </tr>
            <tr>
                <td style="height:20px" colspan="2"></td>
            </tr>
            <tr>
                <td align="center">
                    Folio <br/> @Model.Folio
                </td>
                <td align="center">
                    Fecha <br /> @Model.TransactionDate.ToString("dd/MM/yyyy")
                </td>
            </tr>
            <tr>
                <td align="center">
                    Agente <br /> @Model.User.UserName
                </td>
                <td align="center">
                    Hora<br />
                    @Model.TransactionDate.ToString("HH:mm:ss")
                </td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                   Tipo pago: @Model.PaymentType
                </td>
            </tr>
            <tr>
                <td style="height:20px" colspan="2"></td>
            </tr>
            <tr>
                <td align="center" colspan="2">
                    <table style="width:100%">
                        @foreach (var tI in Model.SaleDetails)
                        {
                            var i = tI.Product.Code.Length - 4;
                            var sCode = tI.Product.Code.Length <= 4 ? tI.Product.Code : tI.Product.Code.Substring(i, 4);
                            var sName = tI.Product.Name.Length <= 12 ? tI.Product.Name : tI.Product.Name.Substring(0, 12);
                            <tr style="border-bottom:solid 1px gray; ">
                                <td class="text-left">
                                    @if (tI.ParentId == null)
                                    {
                                        @sCode
                                    }
                                    
                                </td>
                                <td class="text-left">
                                    @if (tI.ParentId != null)
                                    {
                                        sName = (sCode + " " + sName).ToString();
                                    }
                                   @sName
                                </td>
                                <td class="text-center">
                                    @tI.Quantity
                                </td>
                                <td class="text-right">
                                    @if (tI.ParentId == null)
                                    {
                                        @tI.Amount.ToString("c")
                                    }
                                    
                                </td>
                            </tr>

                            <tr><td colspan="4" style="height:10px"></td></tr>
                            @*if (tI.Product.ProductType == CerberusMultiBranch.Models.Entities.Catalog.ProductType.Package)
                            {
                                <tr style="border-bottom:solid 1px gray;">
                                    <td colspan="4" class="text-uppercase text-center" style="height:10px">
                                    ===Contenido del paquete==</td>
                                </tr>
                            }
                            else
                            {
                                <tr><td colspan="4" style="height:10px"></td></tr>
                            }*@
                        }
                        <tr>
                            <td colspan="4" style="height:20px"></td>
                        </tr>
                        <tr>
                            <td colspan="2" />
                            <td>Total</td>
                            <td align="right">
                                @Model.TotalAmount.ToString("c")
                            </td>
                        </tr>
                        <tr style="height:60px">
                            <td colspan="4" />
                        </tr>
                        <tr style="height:30px">
                            <td colspan="4" align="center">
                                <br/><br /><br />
                                NO VALIDO COMO COMPROBANTE FISCAL
                            </td>
                        </tr>
                        <tr style="height:30px">
                            <td colspan="4" align="center">
                                ==GRACIAS POR SU COMPRA==
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="btn-group">
    <button class="btn btn-primary" type="button" onclick="window.location='@Url.Action("Index")'">
        <span class="fa fa-backward"></span>
        Volver a Cajar
    </button>
    <button class="btn btn-success" type="button" onclick="PrintNote()">
        <span class="fa fa-print"></span>
        Imp Nota
    </button>
    <button class="btn btn-warning" type="button" onclick="PrintTicket()">
        <span class="fa fa-ticket"></span>
        Imp Ticket
    </button>
</div>


<script>
    $(document).ready(function () {
    });

    function PrintNote() {
        $("#divNote").printThis();
    }

    function PrintTicket() {
        $("#divTicket").printThis();
    }

</script>