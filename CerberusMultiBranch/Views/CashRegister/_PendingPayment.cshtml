@model ICollection<CerberusMultiBranch.Models.Entities.Operative.Sale>
@using CerberusMultiBranch.Support


<table id="tbPendingPayment" class="table dt-responsive nowrap table-bordered small" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">@Html.DisplayName("Folio")</th>
            <th class="text-center">@Html.DisplayName("Cliente")</th>

            <th class="text-center">@Html.DisplayName("Agente")</th>
            <th class="text-center">@Html.DisplayName("Entrega")</th>
            <th class="text-center">@Html.DisplayNameFor(m => m.First().TotalAmount)</th>

            <th class="text-center">@Html.DisplayName("Tipo")</th>
            <th class="text-center" />
            <th class="text-center">@Html.DisplayName("Fecha")</th>
            <th class="text-center" />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-uppercase">@Html.DisplayFor(m => item.Folio)</td>
                <td>
                    @Html.DisplayUpperFor(m => item.Client.Name)
                </td>

                <td align="center">
                    @Html.DisplayUpperFor(m => item.User.UserName)
                </td>
                <td align="center">
                    @{ var sending = "Mostrador"; }

                    @if (item.SendingType != 0)
                    {
                        sending = "Domicilio";
                    }

                    @Html.DisplayFor(m => sending)
                </td>
                <td align="center">@Html.DisplayFor(m => item.TotalTaxedAmount)</td>

                <td align="center">
                    @item.TransactionType.ToString()
                </td>
            
                <td align="center">
                    <button class="btn btn-primary btn-sm" title="Recibir pago" onclick="ShowPaymentModal('@item.SaleId')">
                        <span class="fa fa-dollar" />
                        Cobrar
                    </button>
                </td>
                <td align="center">
                    @Html.DisplayFor(m => item.TransactionDate)
                </td>
                <td>
                    <button class="btn btn-danger btn-sm" type="button" onclick="BeginCancel('@item.SaleId')">
                        <span class="fa fa-trash-o"></span>
                        Cancelar
                    </button>
                </td>
            </tr>
    }
    </tbody>
</table>


<script>
    $(document).ready(function ()
    {
        Paginate("#tbPendingPayment", 3, true, null, false);
    });

    //Inicia la ventana de cobro
    function ShowPaymentModal(id)
    {
        ShowLoading('static');

        ExecuteAjax('@Url.Action("BeginRegistPayment")', { id: id }, function (response)
        {
            HideLoading(function ()
            {
                ShowModal(response, 'static', 'lg');
            });
        });
    }

    function BeginCancel(id)
    {
        BeginCancelSale(id, function ()
        {
            CheckPendingPayments();

            CheckRefunding();
            console.log("Se recarga");
        });
    }

</script>