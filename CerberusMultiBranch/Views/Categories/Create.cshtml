@model CerberusMultiBranch.Models.Entities.Config.Category

@{
    ViewBag.Title = "Create";
}

<h3>
    <span class="glyphicon glyphicon-list-alt" style="float:left"></span>
    &nbsp;&nbsp;Gestión de categorías de productos
</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CategoryId)

        <div class="form-group col-md-10">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-7">
            <div class="btn-group">
                <button class="btn btn-success" type="submit">
                    <span class="glyphicon glyphicon-floppy-disk" />
                </button>
                <button type="button" class="btn btn-primary" id="btnSearch">
                    <span class="fa fa-search-plus"></span>
                </button>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function ()
    {
        $("#btnSearch").click(function () { window.location.replace('@Url.Action("Index")') });
    });
</script>