@model CerberusMultiBranch.Models.ViewModels.Catalog.SearchClientViewModel

@{
    ViewBag.Title = "Index";
}

<h3>
    <span class="fa fa-address-book" style="float:left"></span>
    &nbsp;&nbsp;Catálogo de Clientes
</h3>

<div class="col-md-6">
    <div class="input-group ">
        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
        @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control" })
    </div>
</div>
<div class="btn-group">
    <button id="btnFilter" type="button" class="btn btn-warning" data-toggle="collapse" data-target="#divFilters">
        <span class="glyphicon glyphicon-eye-open"></span>
    </button>
    <button  type="button" class="btn btn-success"  onclick="window.location='/Clients/Create';" >
        <span class="glyphicon  glyphicon-file"></span>
    </button>

</div>
<br /><br /><br />

    <div id="divFilters" class="col-md-4 collapse">
        <div class="panel panel-danger">
            @*<div class="panel-heading">
                Filtros de busqueda
            </div>*@
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.Label("Estado", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.DropDownList("StateId", Model.States, "", new { @class = "form-control" })
                            </div>
                        </div>
                    <div class="form-group col-md-12">
                        @Html.Label("Ciudad / Municipio", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.DropDownList("CityId", Model.Cities, "", new { @class = "form-control" })
                            </div>
                        </div>
                    <div class="form-group col-md-12">
                        @Html.Label("Nombre del Cliente", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.TextBox("Name", "", htmlAttributes: new { @class = "form-control"})
                            </div>
                        </div>

                    <div class="form-group col-md-7">
                        @Html.Label("Clave de Cliente", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.TextBox("Code", "", htmlAttributes: new { @class = "form-control", id = "txtCode" })
                            </div>
                        </div>
                    <div class="form-group col-md-7">
                        @Html.Label("Télefono", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.TextBox("Phone", "", htmlAttributes: new { @class = "form-control", id = "txtPhone" })
                            </div>
                        </div>
                </div>
            </div>
            <div class="panel-footer">
                <button class="btn btn-default" type="button" onclick="Search()">
                    <span class="glyphicon glyphicon-search" />
                </button>
            </div>
        </div>
    </div>

    <div id="divClients" class="col-md-12">
        @Html.Partial("_List", Model.Clients)
    </div>


<script>
   
    $(document).ready(function ()
    {
        SetCascade("#StateId", "#CityId", "GetCities");

        $("#divFilters").on("hide.bs.collapse", function ()
        {
            $("#btnFilter").attr("class", "btn btn-warning");
            $("#btnFilter").html('<span class="glyphicon glyphicon-eye-open"></span>');
            $("#divClients").attr("class", "col-md-12");
        });
        $("#divFilters").on("show.bs.collapse", function ()
        {
            $("#btnFilter").attr("class", "btn btn-default");
            $("#btnFilter").html('<span class="glyphicon glyphicon-eye-close"></span>');
            $("#divClients").attr("class", "col-md-8");
        });

    });



    function Search()
    {
        console.log("Searching");

        $.ajax({
            url: "/Clients/Search",
            type: "POST",
            data: {
                stateId: $("#StateId").val(),
                cityId: $("#CityId").val(),
                name: $("#txtName").val(),
                code: $("#txtCode").val(),
                phone: $("#txtPhone").val()
            },
            sucess: function (view)
            {
                console.log("Succes");
                $("#divClients").html(view);
            },

            error: function (data) { console.log("Usuario Invalido"); console.log(data); },
            statusCode:
            {
                200: function (view)
                {
                    console.log("200: Authenticated ");
                    $("#divClients").html(view);
                },
                401: function (data)
                {
                    alert('401: Unauthenticated');
                }
            }
        });
    }

</script>