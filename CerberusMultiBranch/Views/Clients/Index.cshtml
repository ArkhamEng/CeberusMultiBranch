@model CerberusMultiBranch.Models.ViewModels.Catalog.SearchClientViewModel

@{
    ViewBag.Title = "Catálogo de Clientes";
    ViewBag.Class = "fa fa-address-book";
}

<hr />

<div class="panel panel-danger">
    <div class="panel-body">
        <div class="col-md-10">
            <div class="input-group ">
                @Html.TextBox("Ftr", "", htmlAttributes: new
           {
               @class = "form-control",
               placeholder = "RFC",
               style = "width:30%"
           })
                @Html.TextBox("txtName", "", htmlAttributes: new
           {
               @class = "form-control",
               placeholder = "Clave o nombre del cliente",
               style = "width:70%"
           })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnSearch">
                        <span class="glyphicon glyphicon-search"></span>
                        <u>B</u>uscar
                    </button>
                    <button type="button" class="btn btn-success" id="btnCreate">
                        <span class="glyphicon  glyphicon-file"></span>
                        <u>N</u>uevo
                    </button>
                </span>
            </div>
        </div>
        <br /><br /><br />
        <div class="col-md-9">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                @Html.DropDownList("StateId", Model.States, "Estado / Entidad", new { @class = "form-control" })
                <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                @Html.DropDownList("CityId", Model.Cities, "Ciudad / Municipio", new { @class = "form-control" })
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button" id="btnClear">
                        <span class="glyphicon glyphicon-refresh"></span>
                        <u>L</u>impiar
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>


<div id="divClients" class="col-md-12">
    @Html.Partial("_List", Model.Clients)
</div>


<script>

    $(document).ready(function ()
    {
        $("#btnCreate").click(function ()
        {
            ShowLoading();
            window.location ='@Url.Action("Create")';
        });

        $("#btnClear").click(function ()
        {
            ShowLoading();
            window.location = '@Url.Action("Index",new { })'
        })

        SetCascade("#StateId", "#CityId", "GetCities");

        $("#btnSearch").click(function ()
        {
            ShowLoading();
            var data = { stateId: $("#StateId").val(), cityId: $("#CityId").val(), name: $("#txtName").val(), ftr: $("#Ftr").val() };

            ExecuteAjax('@Url.Action("Search")', data, function (view)
            {
                $("#divClients").html(view);
                HideLoading();
            });
          
        });
    });

    $(document).keydown(function (e) {
        if (e.which == 13 || (e.altKey && e.which == 66)) {
            $("#btnSearch").click();
        }

        if (e.altKey && e.keyCode == 76) {
            $("#btnClear").click();
        }
        if (e.altKey && e.keyCode == 78) {
            $("#btnCreate").click();
        }
    });

</script>