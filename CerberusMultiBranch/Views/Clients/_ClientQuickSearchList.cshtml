@model IEnumerable<ClientViewModel>

@using CerberusMultiBranch.Support
@using CerberusMultiBranch.Models.ViewModels.Catalog



<table id="tbClientQuickSearch" class="table dt-responsive nowrap table-bordered small hidden" style="width:100%">
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.FTR)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th/>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => item.FTR)
                </td>
                <td class="text-lowercase">
                   @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td >
                    <button type="button" class="btn btn-primary btn-xs" onclick="ClientSelected('@item.ClientId','@item.Name','@item.FTR')">
                        <span class="fa fa-check"></span>
                        Seleccionar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function ()
    {
        $("#tbClientQuickSearch").removeClass("hidden");
        Paginate("#tbClientQuickSearch", 8, true, "#FClientName",false);
    });

    var recordSelected;

    function ClientSelected(id, name, ftr)
    {
        HideModal(function () { recordSelected(id, name, ftr); }, true);
    }

   
</script>