@model IEnumerable<CerberusMultiBranch.Models.Entities.Config.Category>


    <table id="tbCategories" class="table table-striped ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SatCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Commission)
                </th>
                <th>
                    @Html.DisplayName("Fecha Mod")
                </th>
                <th>
                    @Html.DisplayName("Usuario Mod")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SatCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commission)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdUser)
                    </td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-warning btn-xs" title="Editar" onclick="EditCategory(@item.CategoryId)">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                            <button type="button" class="btn btn-danger btn-xs" title="Eliminar" onclick="BeginDeleteCategory(@item.CategoryId)">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
<input type="hidden" id="hdnCategoryDel" />
<script>
    $(document).ready(function () 
    {
        Paginate("#tbCategories",10);
    });

    function EditCategory(id) 
    {
        ShowLoading();
        ExecuteAjax('@Url.Action("GetCategory","Configuration")', { categoryId: id }, function (response)
        {
            HideLoading();
            if ($.isPlainObject(response))
            {

            }
            else
                $("#divCategoryEdition").html(response);
        });
    }

    function BeginDeleteCategory(id)
    {
        $("#hdnCategoryDel").val(id);
        $("#ModalConfirmDelete").modal("show");
    }

    function DeleteCategory()
    {
        console.log("deleting");
        var id = $("#hdnCategoryDel").val();
        ShowLoading();

        ExecuteAjax("@Url.Action("DeleteCategory", "Configuration")", { id: id }, function (response) {
            HideLoading();
            if ($.isPlainObject(response))
                ShowMessage(response.Result, response.Message, 'warning');
            else {
                $("#divCategories").html(response);
                ShowMessage("Operación exitosa", "La categoría  fue eliminada", "success");
            }
        });
    }
</script>