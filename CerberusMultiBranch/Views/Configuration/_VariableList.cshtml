@model IEnumerable<CerberusMultiBranch.Models.Entities.Config.Variable>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th/>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.TextBoxFor(modelItem => item.Value, htmlAttributes: new { @class = "form-control" })
        </td>
        <td>
            <button class="btn btn-success">
                <span class="fa fa-save"/>
            </button>
        </td>
    </tr>
}

</table>
