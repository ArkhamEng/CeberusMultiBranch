@model CerberusMultiBranch.Models.IndexViewModel
@{
    ViewBag.Title = "Cuenta";
}



<h3>
    <span class="fa fa-address-card-o" style="float:left"></span>
    &nbsp;&nbsp;Administración de cuenta
</h3>


<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <hr />

    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear contraseña", "SetPassword")
            }
            ]
        </dd>
        <dt>Foto de perfil</dt>
        <dd>
          [ @Html.ActionLink("Cambiar foto de perfil", "AddProfilePicture") ]
        </dd>
        @*
