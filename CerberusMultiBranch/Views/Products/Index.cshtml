@model CerberusMultiBranch.Models.ViewModels.Catalog.SearchProductViewModel

@{
    ViewBag.Title = "Cátalogo productos";
    ViewBag.Class = "fa fa-dropbox";
}


<hr />



<div id="pnlFilters" class="panel panel-danger top">
    <div class="panel-body">
        <div class="col-md-11">
            <div class="input-group">
                @Html.DropDownList("SystemId", Model.Systems, "todo sistema", new { @class = "form-control text-uppercase input-lg", style = "width:30% !important" })
                @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control  input-lg", placeholder = "Búsqueda por código o descripción", style = "width:70% !important" })
                <div class="input-group-btn">
                    <button class="btn btn-default btn-lg hidden-xs hidden-sm" type="button" id="btnSearchProvider" title="Buscar en lista de proveedores">
                        <span class="fa fa-binoculars"></span>
                    </button>
                    <button class="btn btn-primary btn-lg" type="button" id="btnSearch" title="Buscar">
                        <span class="glyphicon glyphicon-search"></span>
                        <u>B</u>uscar
                    </button>

                    @if (User.IsInRole("Capturista"))
                    {
                        <button type="button" class="btn btn-success btn-lg hidden-xs hidden-sm" id="btnCreate" title="Crear nuevo registro">
                            <span class="glyphicon  glyphicon-file"></span>
                            <u>N</u>uevo
                        </button>
                    }
                </div>

            </div>
        </div>



        @*<button id="btnSwitch" type="button" class="btn btn-default hidden-xs hidden-sm" title="Ver como tabla">
                <span id="spSwitch" class="fa fa-th-large"></span>
            </button>
            <button class="btn btn-default  hidden-xs hidden-sm" type="button" id="btnClear" title="Recargar">
                <span class="glyphicon glyphicon-refresh" />
            </button>*@



        <br /><br />
        <br /><br />
        <div  class="col-md-10 hidden-xs hidden-sm">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-registered"></i></span>
                @Html.DropDownList("CarMakeId", Model.Makes, "armadora", new { @class = "form-control text-uppercase " })
                <span class="input-group-addon"><i class="fa fa-car"></i></span>
                @Html.DropDownList("CarModelId", Model.Models, "Modelo", new { @class = "form-control text-uppercase " })
                <span class="input-group-addon"><i class="fa fa-calendar-check-o"></i></span>
                @Html.DropDownList("CarYearId", Model.Years, "Año", new { @class = "form-control text-uppercase " })
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button" id="btnClear" title="Recargar">
                        <span class="glyphicon glyphicon-refresh"></span>
                        <u>L</u>impiar
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>
<input id="IsGrid" type="hidden" value="false" />

<div id="divProducts" class="col-md-12 container">
    @Html.Partial("_List", Model.Products)
</div>
<button type="button" hidden id="btnTest" onclick='$("#ModalQuickAddProduct").modal("show");'></button>

<div id="divProviderProducts">
</div>


<div id="divProductDetail">
</div>

<div id="divTransference">
</div>

<div id="divQuickAdd">
</div>
 
@Html.Partial("_ConfirmDelete")

<script>

    $(document).ready(function ()
    {
        $("#CarMakeId").change(function ()
        {
            CascadeMake();
        });

        $("#CarModelId").change(function () {
            CascadeModel();
        });

        $("#btnCreate").click(function () { window.location = '@Url.Action("Create","Products")'; });

        $("#btnSearch").click(function () {
            LookFor();
        });

        $("#btnSearchProvider").click(function ()
        {
            var f = $("#txtName").val();

            if (f.length < 3)
            {
                ShowMessage("Datos insuficientes!", "Para realizar una busqueda en el catálogo de proveedores"
                    + "es necesario ingresar por lo menos 3 caracteres en el filtro de descripción / código","warning");
                return;
            }

            ShowLoading();
            ExecuteAjax('@Url.Action("ExternalSearch", "Products")', { filter: $("#txtName").val() }, function (response)
            {
                HideLoading();
                if($.isPlainObject(response))
                {
                    ShowMessage(response.Result, response.Message, "warning");
                }
                else
                {
                    $("#divProviderProducts").html(response);
                }
            });
        });

        $("#btnSwitch").click(function ()
        {
            if ($("#IsGrid").val() != 'false')
            {
                $("#IsGrid").val('false');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-th-large");
                $("#btnSwitch").prop("title", "ver como tabla");
            }
            else
            {
                $("#IsGrid").val('true');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-list");
                $("#btnSwitch").prop("title", "ver como lista");
            }
        });

        $("#btnClear").click(function () { ShowLoading(); window.location = '@Url.Action("Index",new { })' })
    });

    function LookFor()
    {
        ShowLoading();
        var data =
        {
            categoryId: $("#FiltCategoryId").val(),
            carMakeId: $("#CarMakeId").val(),
            carModelId: $("#CarModelId").val(),
            carYear: $("#CarYearId").val(),
            name: $("#txtName").val(),
            isGrid: $("#IsGrid").val(),
            partSystemId: $("#SystemId").val()
        };
        ExecuteAjax('@Url.Action("Search")', data, function (view) {
            HideLoading();
            $("#divProducts").html(view);
        });
    }

    $(document).keydown(function (e)
    {
        if (!$("#ModalQuickAddProduct").hasClass('in'))
        {
            if (e.which == 13 || (e.altKey && e.which == 66)) {
                console.log("OnPage");
                $("#btnSearch").click();
            }

            if (e.altKey && e.keyCode == 76) {
                $("#btnClear").click();
            }
            if (e.altKey && e.keyCode == 78) {
                $("#btnCreate").click();
            }

            e.stopPropagation();
        }
    });

    function CascadeModel() {
        if ($("#CarModelId").val() != '') {
            var parentId = $("#CarModelId").val();

            ExecuteAjax('@Url.Action("GetYears", "Json")', { parentId: parentId }, function (response) {
                $("#CarYearId").empty();
                $("#CarYearId").append($('<option></option>').val("").html("Año"));
                for (var i = 0; i < response.length; i++) {
                    $("#CarYearId").append($('<option></option>').val(response[i].Value).html(response[i].Text));
                }
            });
        }
        else {
            $("#CarYearId").empty();
            $("#CarYearId").append($('<option></option>').val("").html("Año"));
        }
    }

    function CascadeMake() {
        if ($("#CarMakeId").val() != '') {
            var parentId = $("#CarMakeId").val();

            ExecuteAjax('@Url.Action("GetModels", "Json")', { parentId: parentId }, function (response) {
                $("#CarModelId").empty();
                $("#CarModelId").append($('<option></option>').val("").html("Modelo"));
                $("#CarYearId").empty();
                $("#CarYearId").append($('<option></option>').val("").html("Año"));

                for (var i = 0; i < response.length; i++) {
                    $("#CarModelId").append($('<option></option>').val(response[i].Value).html(response[i].Text));
                }
            });
        }
        else {
            $("#CarModelId").empty();
            $("#CarModelId").append($('<option></option>').val("").html("Modelo"));

            $("#CarYearId").empty();
            $("#CarYearId").append($('<option></option>').val("").html("Año"));
        }
    }
</script>
