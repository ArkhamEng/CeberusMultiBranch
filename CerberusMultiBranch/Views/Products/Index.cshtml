@model CerberusMultiBranch.Models.ViewModels.Catalog.SearchProductViewModel

@{
    ViewBag.Title = "Cátalogo productos";
}

<script>
    HalfProgress();
</script>

<h3>
    <span class="fa fa-shopping-basket" style="float:left"></span>
    &nbsp;&nbsp;Catálogo de Producto
</h3>

<div class="col-md-7">
    <div class="input-group ">
        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
        @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control" })
        <span class="input-group-btn">
            <button id="btnFilter" type="button" class="btn btn-warning" data-toggle="collapse" data-target="#divFilters">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>
            <button type="button" class="btn btn-success" id="btnCreate">
                <span class="glyphicon  glyphicon-file"></span>
            </button>
            <button id="btnSwitch" type="button" class="btn btn-default">
                <span id="spSwitch" class="fa fa-th-large"></span>
            </button>
        </span>
    </div>
</div>

<br /><br /><br />

<div id="divFilters" class="col-md-4  collapse">
    <div class="panel panel-danger">
        @*<div class="panel-heading">
                Filtros de busqueda
            </div>*@
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Sistema", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.DropDownList("PartSystemId", Model.Systems, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.Label("Categoría", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.DropDownList("CategoryId", Model.Categories, "", new { @class = "form-control" })
                    </div>
                </div>

                
                <div id="ModalCarModel" class="modal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content panel panel-danger panel-group">
                            <div class="modal-header panel-heading">
                                <h4 class="modal-title">Selecciona la forma de págo</h4>
                            </div>
                            <div class="modal-body panel-body">

                                <div class="form-group col-md-12">
                                    @Html.Label("Marca", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                                        @Html.DropDownList("CarMakeId", Model.Makes, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group col-md-12">
                                    @Html.Label("Modelo", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                                        @Html.DropDownList("CarModelId", Model.Models, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group col-md-12">
                                    @Html.Label("Año", htmlAttributes: new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                                        @Html.DropDownList("CarYearId", Model.Years, "", new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>



                <div class="form-group col-md-12">
                    @Html.Label("Nombre del Producto", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Name", "", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group col-md-8">
                    @Html.Label("Código", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Code", "", htmlAttributes: new { @class = "form-control"})
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button class="btn btn-default" type="button" id="btnSearch">
                    <span class="glyphicon glyphicon-search" />
                </button>
                <button class="btn btn-default" type="button" id="btnClear">
                    <span class="glyphicon glyphicon-refresh" />
                </button>
            </div>
        </div>
    </div>
</div>
<input id="IsGrid" hidden />

<div id="divProducts" class="col-md-12">
    @Html.Partial("_List", Model.Products)
</div>

<script>

    $(document).ready(function () {
        $("#IsGrid").val('false');
        SetCascade("#CarMakeId", "#CarModelId", "GetModels");

        SetCascade("#CarModelId", "#CarYearId", "GetYears");

        $("#btnCreate").click(function () { window.location = '/Products/Create'; });

        SetFilterControls("#divFilters", "#btnFilter", "#divProducts");

        $("#btnSearch").click(function ()
        {
            HalfProgress();
            LookFor();
        });

        $("#btnSwitch").click(function () {
            HalfProgress();
            console.log($("#IsGrid").val());
            if ($("#IsGrid").val() != 'false') {
                $("#IsGrid").val('false');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-th-large");

            }
            else {
                $("#IsGrid").val('true');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-list");
            }

        });

        $("#btnClear").click(function () { window.location = '@Url.Action("Index",new { })' })

        $("#CarMakeId").change(function () {
            $("#CarYearId").empty();
            $("#CarYearId").attr("readonly", true);
        });

        CompleateProgress();
    });

    function LookFor() {
        var data = {
            categoryId: $("#CategoryId").val(),
            carMakeId: $("#CarMakeId").val(),
            carModelId: $("#CarModelId").val(),
            carYear: $("#CarYearId").val(),
            name: $("#Name").val(),
            code: $("#Code").val(),
            isGrid: $("#IsGrid").val(),
            partSystemId: $("#PartSystemId").val()
        };

        Search("/Products/Search", data, "#divProducts");
    }
</script>
