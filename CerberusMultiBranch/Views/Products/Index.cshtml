@model CerberusMultiBranch.Models.ViewModels.Catalog.SearchProductViewModel

@{
    ViewBag.Title = "Cátalogo productos";
    ViewBag.Class = "fa fa-book";
}


@*<h3 >
        <span class="fa fa-book" style="float:left"></span>
        &nbsp;&nbsp;Catálogo de Producto
    </h3>*@
<hr />


<div class="col-md-10">
    <div class="input-group">
        @Html.DropDownList("PartSystemId", Model.Systems, "todo sistema", new { @class = "form-control text-uppercase input-lg", style = "width:30% !important" })
        @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control  input-lg", placeholder = "Búsqueda por código o descripción", style = "width:70% !important" })
        <span class="input-group-btn">
            <button class="btn btn-default btn-lg" type="button" id="btnSearch" title="Buscar">
                <span class="glyphicon glyphicon-search" />
            </button>
            <button type="button" class="btn-lg btn btn-warning hidden-xs hidden-sm" data-toggle="collapse" data-target="#divFilters" title="FILTRAR POR VEHICULO">
                <span class="fa fa-car"></span>
            </button>

            @if (User.IsInRole("Capturista"))
            {
                <button type="button" class="btn btn-success btn-lg" id="btnCreate" title="Crear nuevo registro">
                    <span class="glyphicon  glyphicon-file"></span>
                </button>
            }
        </span>
    </div>
</div>



@*<button id="btnSwitch" type="button" class="btn btn-default hidden-xs hidden-sm" title="Ver como tabla">
        <span id="spSwitch" class="fa fa-th-large"></span>
    </button>
    <button class="btn btn-default  hidden-xs hidden-sm" type="button" id="btnClear" title="Recargar">
        <span class="glyphicon glyphicon-refresh" />
    </button>*@



<br /><br />
<br /><br />
<div id="divFilters" class="col-md-10  collapse">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-registered"></i></span>
        @Html.DropDownList("CarMakeId", Model.Makes, "Toda Marca", new { @class = "form-control text-uppercase input-lg" })
        <span class="input-group-addon"><i class="fa fa-car"></i></span>
        @Html.DropDownList("CarModelId", Model.Models, "Todo Modelo", new { @class = "form-control text-uppercase input-lg" })
        <span class="input-group-addon"><i class="fa fa-calendar-check-o"></i></span>
        @Html.DropDownList("CarYearId", Model.Years, "Todos Años", new { @class = "form-control text-uppercase input-lg" })
    </div> 
</div>
<input id="IsGrid" type="hidden" value="false" />

<div id="divProducts" class="col-md-12">
    @Html.Partial("_List", Model.Products)
</div>

<div id="divProductDetail">

</div>

<div id="divTransference">

</div>
<script>

    $(document).ready(function ()
    {
        $("#CarMakeId").change(function ()
        {
            CascadeMake();
        });

        $("#CarModelId").change(function ()
        {
            CascadeModel();
        });

        $("#btnCreate").click(function () { window.location = '@Url.Action("Create","Products")'; });

        $("#btnSearch").click(function () {
            LookFor();
        });

        $("#btnSwitch").click(function () {
            if ($("#IsGrid").val() != 'false') {
                $("#IsGrid").val('false');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-th-large");
                $("#btnSwitch").prop("title", "ver como tabla");

            }
            else {
                $("#IsGrid").val('true');
                LookFor();
                $("#spSwitch").attr("class", "fa fa-list");
                $("#btnSwitch").prop("title", "ver como lista");
            }

        });

        $("#btnClear").click(function () { window.location = '@Url.Action("Index",new { })' })

     

    });

    function LookFor() {
        ShowLoading();
        var data =
        {
            categoryId: $("#CategoryId").val(),
            carMakeId: $("#CarMakeId").val(),
            carModelId: $("#CarModelId").val(),
            carYear: $("#CarYearId").val(),
            name: $("#txtName").val(),
            isGrid: $("#IsGrid").val(),
            partSystemId: $("#PartSystemId").val()
        };
        ExecuteAjax('@Url.Action("Search")', data, function (view) {
            HideLoading();
            $("#divProducts").html(view);
        });
    }

    $(document).keypress(function (e)
    {
        if (e.which == 13)
        {
            LookFor();
        }
    });
    
    function CascadeModel() {
        if ($("#CarModelId").val() != '') {
            var parentId = $("#CarModelId").val();

            ExecuteAjax('@Url.Action("GetYears", "Json")', { parentId: parentId }, function (response) {
                $("#CarYearId").empty();
                $("#CarYearId").append($('<option></option>').val("").html("Todo Año"));
                for (var i = 0; i < response.length; i++) {
                    $("#CarYearId").append($('<option></option>').val(response[i].Value).html(response[i].Text));
                }
            });
        }
        else
        {
            $("#CarYearId").empty();
            $("#CarYearId").append($('<option></option>').val("").html("Todo Año"));
        }
    }

    function CascadeMake()
    {
        if ($("#CarMakeId").val() != '')
        {
            var parentId = $("#CarMakeId").val();

            ExecuteAjax('@Url.Action("GetModels", "Json")', { parentId: parentId }, function (response) {
                $("#CarModelId").empty();
                $("#CarModelId").append($('<option></option>').val("").html("Todo Modelo"));
                $("#CarYearId").empty();
                $("#CarYearId").append($('<option></option>').val("").html("Todos Años"));

                for (var i = 0; i < response.length; i++)
                {
                    $("#CarModelId").append($('<option></option>').val(response[i].Value).html(response[i].Text));
                }
            });
        }
        else {
            $("#CarModelId").empty();
            $("#CarModelId").append($('<option></option>').val("").html("Todo Modelo"));

            $("#CarYearId").empty();
            $("#CarYearId").append($('<option></option>').val("").html("Todo Año"));
        }
    }

</script>
