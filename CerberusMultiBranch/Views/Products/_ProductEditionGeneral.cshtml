@Html.HiddenFor(model => model.ProviderCode)


<script>
    $(document).ready(function ()
    {
        ValidateStock();

        $("#Code").val('@Model.Code');

        $("#StockRequired").change(function (a)
        {
            ValidateStock();
        });

        $("#IsOnlineSold").change(function (a) {
            ValidateStock();
        });

        var allowLock = false;

        if ('@User.IsInRole("Administrador")' == 'True' || '@User.IsInRole("Supervisor")' == 'True')
            allowLock = true;
        
        if(parseInt('@Model.ProductId') > 0)
            $("#StockRequired").attr("readonly", true);

        $("#StockLocked").attr("readonly", !allowLock);
        

        $("#StockLocked").change(function (a) {
            ValidateStock(); 
        });


    });

    function ValidateStock()
    {
        var isLocked = $("#StockLocked").is(':checked');

        var checked = $("#StockRequired").is(':checked');

        var isOnline = $("#IsOnlineSold").is(':checked');

        $("#Quantity").attr("readonly", isLocked);
        $("#BuyPrice").attr("readonly", isLocked);
        $("#Code").attr("readonly", isLocked);
        $("#ShortName").attr("readonly", isLocked);
        $("#IsOnlineSold").attr("readonly", isLocked);

        $("#OnlinePercentage").attr("readonly", !isOnline);
        $("#OnlinePrice").attr("readonly", !isOnline);

        if (!isOnline)
        {
            $("#OnlinePercentage").val(0);
            $("#OnlinePrice").val(0);
        }
        
        if (!isLocked)
            $("#Quantity").attr("readonly", !checked);

        $("#Ledge").attr("readonly", !checked);
        $("#Row").attr("readonly", !checked);
        $("#MaxQuantity").attr("readonly", !checked);
        $("#MinQuantity").attr("readonly", !checked);
    }
</script>