@model IEnumerable<string>
@using CerberusMultiBranch.Support


    @if (Model.Count() == Cons.One)
    {
        <div class="col-md-12">
            <img class="img-rounded img-responsive" src="@Model.First()" />
        </div>
    }
    else
    {
        var ind = Cons.Zero;
        var wrp = Cons.Zero;
        
        <div id="ProductCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var path in Model)
                 {
                    var cls = ind == Cons.Zero ? "active" : string.Empty;

                    <li data-target="#ProductCarousel" data-slide-to="@ind" class="@cls"></li>

                    ind++;
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var path in Model)
                {
                    var cls = wrp == Cons.Zero ? "item active col-md-12" : "item col-md-12";

                    <div class="@cls">
                        <img src="@path" class="img-rounded img-responsive" style="margin: 0 auto;" />
                    </div>

                    wrp++;
                }
            </div>

            <a class="left carousel-control" href="#ProductCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="right carousel-control" href="#ProductCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    }
 