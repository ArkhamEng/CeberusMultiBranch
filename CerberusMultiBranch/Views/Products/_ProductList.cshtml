@model IEnumerable<CerberusMultiBranch.Models.Entities.Catalog.Product>


<table id="tbQuickProduct" class="table table-hover">
    <thead>
        <tr>
            <th class="col-md-1"></th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.TradeMark)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.BuyPrice)
            </th>
            <th class="col-md-2">
                @Html.DisplayName("Cantidad")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @if (item.Images != null && item.Images.Count > 0)
                    {
                        <img src="@item.Images.First().Path" class="img-responsive" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TradeMark)
                </td>
                <td>
                    @Html.Hidden("ProductId",item.ProductId)
                    @Html.EditorFor(modelItem => item.BuyPrice, new { htmlAttributes = new { @class = "form-control", type = "number",id="txtBuyPrice" } })
                </td>

                <td>
                    <div class="input-group">
                        @Html.TextBox("Quantity", "1", htmlAttributes: new { @class = "form-control", type = "number" })
                        <span class="input-group-addon btn btn-warning" onclick="AddDetail(this)" >
                            <span class="glyphicon glyphicon-plus-sign"></span>
                        </span>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
<script>
    $(document).ready(function ()
    {
        Paginate("#tbQuickProduct", 5)
        CompleateProgress();
    });
</script>