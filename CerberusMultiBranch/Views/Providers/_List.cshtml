@model IEnumerable<CerberusMultiBranch.Models.Entities.Catalog.Provider>


<table id="tbProviders" class="table table-striped">
    <thead>
        <tr>
            <th class="col-md-1">
                @Html.DisplayName("Clave")
            </th>
            <th class="col-md-4">
                @Html.DisplayName("Clave")
            </th>
            <th class="col-md-3">
                @Html.DisplayName("Página")
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th class="col-md-1">
                @Html.DisplayName("Productos")
            </th>
  
            <th class="col-md-1"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-lowercase">
                    @Html.DisplayFor(modelItem => item.WebSite)                 
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td class="text-center">
                    @item.Catalog
                </td>
              
                <td class="col-md-1" align="right">
                    <div class="btn-group">
                        <button class="btn btn-warning  btn-xs" onclick="ShowLoading(); window.location = '@Url.Action("Create", new {id = item.ProviderId})'" title="Editar datos de provedor">
                            <span class="glyphicon glyphicon-pencil" />
                        </button>
                        <button class="btn btn-default  btn-xs" onclick="ShowLoading(); window.location = '@Url.Action("UpdateCatalog", new {id = item.ProviderId})'" title="subir lista de productos">
                            <span class="fa fa-upload" />
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

<script>
    $(document).ready(function ()
    {
        SetDataTable("#tbProviders","#txtName");
        
    });
</script>