@model CerberusMultiBranch.Models.Entities.Operative.Purchase
@using CerberusMultiBranch.Models.Entities.Operative;

@{
    ViewBag.Title = "Detalle de venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    <button type="button" class="btn btn-default" title="Volver a mis compras"
            onclick="ShowLoading(); window.location='@Url.Action("MyPurchases")'">
        <span class="fa fa-arrow-left"></span>
    </button>
   Detalle de mi compra
</h3>
<div class="panel-group">
    <div class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-5">
                    <label class="control-label">
                        Nombre del Proveedor
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-black-tie"></i></span>
                        <input class="form-control" value="@Model.Provider.Name" readonly />
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">
                        Tipo de compra
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-credit-card"></i></span>
                        <input class="form-control" value="@Model.PaymentType.ToString()" readonly />
                    </div>
                </div>

                <div class="form-group col-md-2 col-md-offset-1">
                    <label class="control-label">
                        Fecha
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        <input class="form-control" value="@Model.TransactionDate.ToString("dd/MM/yyyy")" readonly />
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">
                        Expira
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar-check-o"></i></span>
                        <input class="form-control" value="@Model.Expiration.ToString("dd/MM/yyyy")" readonly />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label class="control-label">
                        Usuario de ultima modificación
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-briefcase"></i></span>
                        <input class="form-control" value="@Model.UpdUser" readonly />
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">
                        Estado Aterior
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-adjust"></i></span>
                        @switch (Model.LastStatus)
                        {
                            case TranStatus.Canceled:
                                <label class="form-control alert alert-danger">Cancelado</label>
                                break;
                            case TranStatus.InProcess:
                                <label class="form-control alert alert-warning">En Proceso</label>
                                break;
                            case TranStatus.Compleated:
                                <label class="form-control alert alert-success">Inventariado</label>
                                break;
                        }

                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">
                        Estado Actual
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-adjust"></i></span>
                        @switch (Model.Status)
                        {
                            case TranStatus.Canceled:
                                <label class="form-control alert alert-danger">Cancelado</label>
                                break;
                            case TranStatus.InProcess:
                                <label class="form-control alert alert-warning">En Proceso</label>
                                break;
                         
                            case TranStatus.Compleated:
                                <label class="form-control alert alert-success">Inventariado</label>
                                break;
                        }

                    </div>
                </div>

                <div class="form-group col-md-2 col-md-offset-1">
                    <label class="control-label">
                        Factura
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-file-archive-o"></i></span>
                        <input class="form-control" value="@Model.Bill" readonly />
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">
                        Monto Total
                    </label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                        <input class="form-control" value="@Model.TotalAmount.ToString("c")" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-danger">
        <div class="panel-body">
            <table id="tbDetails" class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayName("Código")
                        </th>
                        <th>
                            @Html.DisplayName("Descripción")
                        </th>
                        <th>
                            @Html.DisplayName("Precio")
                        </th>
                        <th>
                            @Html.DisplayName("Cantidad")
                        </th>
                        <th>
                            @Html.DisplayName("Total")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TransactionDetails)
                    {
                        <tr>
                            <td class="col-md-1">
                                @if (item.Product.Images.Count > 0)
                                {
                                    <img class="img-responsive" src="@item.Product.Images.FirstOrDefault().Path" />
                                }
                                else
                                {
                                    <img class="img-responsive" src="~/Content/Images/sinimagen.jpg" />
                                }
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(m => item.Product.Code)
                            </td>
                        
                            <td>
                                @Html.DisplayFor(m => item.Product.Name)
                            </td>
                            <td class="text-right">
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(m => item.Quantity)
                            </td>
                            <td class="text-right">
                                @Html.DisplayFor(m => item.Amount)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        Paginate("#tbDetails", 5)
    });
</script>