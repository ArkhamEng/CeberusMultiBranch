@model IEnumerable<CerberusMultiBranch.Models.Entities.Operative.PurchaseDetail>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amout)
            </th>

            <th>
                <button id="btnShowQuick" class="btn btn-warning btn-xs">
                    <span  class="glyphicon glyphicon-plus-sign" ></span>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Product.Images != null)
                    { 
                        <img src="@item.Product.Images.First().Path" class="img-responsive" />
                    }
                    else
                    {
                        <img src="~/Content/Images/sinimagen.jpg" class="img-responsive" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyPrice)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amout)
                </td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-primary btn-xs" type="button">
                            <span class="glyphicon glyphicon-edit"></span> 
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("_QuickProduct")
<script>
    $(document).ready(function ()
    {
        $("#btnShowQuick").click(function () { $("#ModalQuickProduct").modal('show'); });
    });
</script>