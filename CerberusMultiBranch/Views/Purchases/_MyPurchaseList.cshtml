@model ICollection<CerberusMultiBranch.Models.Entities.Operative.Purchase>

<table id="tbPurchases" class="table table-striped">
    <thead>
        <tr>
            <th class="col-md-1">@Html.DisplayNameFor(m => m.First().Bill)</th>
            <th class="col-md-3">@Html.DisplayName("Proveedor")</th>
            <th class="col-md-1">@Html.DisplayName("Tipo")</th>
            <th class="col-md-1">@Html.DisplayName("Fecha")</th>
            <th class="col-md-1">@Html.DisplayName("Expira")</th>
            <th class="col-md-2">@Html.DisplayName("Monto Total")</th>
            <th class="col-md-1">@Html.DisplayName("Productos")</th>
            <th class="col-md-1">@Html.DisplayName("Estado")</th>
            <th class="col-md-1"/>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Bill)</td>
                <td>@Html.DisplayFor(m => item.Provider.Name)</td>
                <td align="center">@item.PaymentType.ToString()</td>
                <td align="center">@item.TransactionDate.ToString("dd/MM/yyyy")</td>
                <td align="center">@item.Expiration.ToString("dd/MM/yyyy")</td>
                <td align="center">@Html.DisplayFor(m => item.TotalAmount)</td>
                @{ var quantity = item.TransactionDetails.Sum(td => td.Quantity);  }
                <td align="center">@Html.DisplayFor(m =>quantity )</td>
               
                 @switch (item.Status)
                {
                    case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Canceled:
                        <td align="center" class="alert alert-danger">
                            Cancelado
                        </td>
                         break;
                     case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Compleated:
                        <td align="center" class="alert alert-success">
                            Inventariado
                        </td>
                         break;
                     case CerberusMultiBranch.Models.Entities.Operative.TranStatus.InProcess:
                        <td align="center" class="alert alert-info">
                            En Proceso
                        </td>
                         break;
                 }
                <td align="center">
                    <div class="btn-group">
                        @if (item.Status == CerberusMultiBranch.Models.Entities.Operative.TranStatus.InProcess)
                        {
                            <button class="btn btn-warning  btn-xs" onclick="Edit(@item.TransactionId)" title="Editar compra">
                                <span class="glyphicon glyphicon-pencil" />
                            </button>
                        }
                        <button class="btn btn-primary  btn-xs" onclick="Detail(@item.TransactionId)" title="Ver detalle de compra">
                            <span class="glyphicon glyphicon-eye-open" />
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var totalQuantity = Model.Sum(purchase => purchase.TransactionDetails.Sum(s => s.Quantity));
    var totalAmount = Model.Sum(purchase => purchase.TotalAmount);
}
<script>
    $(document).ready(function ()
    {
        SetDataTable("#tbPurchases", "#txtFilter");
    });

    function Detail(id)
    {
        ShowLoading();
        window.location = '@Url.Action("MyDetail")' + '/' + id;
    }

    function Edit(id)
    {
        ShowLoading();
        window.location = '@Url.Action("Create")' + '/' + id;
    }
</script> 