@model CerberusMultiBranch.Models.ViewModels.Operative.TransactionViewModel
@using CerberusMultiBranch.Models.Entities.Operative;

@{
    ViewBag.Title = "Ventas";
    ViewBag.Class = "fa fa-shopping-bag";
}

<h4 id="hCommision" class="alert alert-danger col-md-3 col-md-offset-5"></h4>

<h4 id="hTotal" class="alert alert-info col-md-3  col-md-offset-1"></h4>
<hr />
<div class="panel panel-danger">
    <div class="panel-body">
        <div class="col-md-11">
            <div class="input-group ">
                @Html.DropDownList("BranchId", Model.Branches, "Sucursal", new { @class = "form-control", style = "width:20% !important" })
                @Html.TextBox("Folio", "", htmlAttributes: new {@class = "form-control",
               placeholder = "Folio de venta", style = "width:20% !important"})

                @Html.TextBox("Client", "", htmlAttributes: new{@class = "form-control",
               placeholder = "Nombre del cliente", style = "width:40% !important"})

                <select id="Status" class="form-control" style="width:20% !important">
                    <option value="">Status</option>
                    <option value="@TranStatus.InProcess">Procesando</option>
                    <option value="@TranStatus.Reserved">Reservado</option>
                    <option value="@TranStatus.Compleated">Pagado</option>
                    <option value="@TranStatus.Canceled">Cancelado</option>
                </select>

                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" id="btnSearch" title="Buscar">
                        <span class="glyphicon glyphicon-search"></span>
                        <u>B</u>uscar
                    </button>
                    @if (User.IsInRole("Vendedor"))
                    {
                        <button type="button" class="btn btn-success" id="btnCreate">
                            <span class="glyphicon  glyphicon-file"></span>
                            <u>N</u>uevo
                        </button>
                    }
                   
                </span>
            </div>
        </div>

        <br /><br /><br /><br />
        <div class="col-md-10">
            <div class="input-group">
                @if (User.IsInRole("Supervisor"))
                { 
                    @Html.TextBox("User", "", htmlAttributes: new { @class = "form-control",placeholder = "Nombre de usuario"})
                }
                <span class="input-group-addon"><a>Fecha Inicial</a></span>
                @Html.EditorFor(m => m.BeginDate, new { htmlAttributes = new { @class = "form-control" } })

                <span class="input-group-addon"><a>Fecha final</a></span>
                @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                <span class="input-group-btn">
                    <button class="btn btn-info" type="button" onclick="Reload()" id="btnClear">
                        <span class="glyphicon glyphicon-refresh"></span>
                        <u>L</u>impiar
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>
<div id="divNewSale"></div>

<div id="divSales">
    @Html.Partial("_SaleList", Model.Sales)
</div>
<script>
    $(document).ready(function ()
    {
        SetFilterControls("#divFilters", "#btnFilter", "#divSales");

        $("#btnSearch").click(function () {
            ShowLoading();
            var data = {
                branchId: $("#BranchId").val(),
                beginDate: $("#BeginDate").val(),
                endDate: $("#EndDate").val(),
                folio: $("#Folio").val(),
                client: $("#Client").val(),
                user: $("#User").val(),
                status: $("#Status").val()
            };
            ExecuteAjax('@Url.Action("Search")', data, function (view) {
                $("#divSales").html(view);
                HideLoading();
            });

        });

        $("#btnCreate").click(function () {
            ExecuteAjax('@Url.Action("BeginSale")', {}, function (response) {
                $("#divNewSale").html(response);
            });
        });
    });

    function Reload() {
        ShowLoading();
        window.location = '@Url.Action("History")';
    }

    $(document).keydown(function (e) {
        if (e.which == 13 || (e.altKey && e.which == 66))
        {
            $("#btnSearch").click();
        }

        if (e.altKey && e.keyCode == 76)
        {
            $("#btnClear").click();
        }
    });
</script>

