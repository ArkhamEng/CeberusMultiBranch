@model CerberusMultiBranch.Models.ViewModels.Operative.TransactionViewModel

@{
    ViewBag.Title = "Historial Ventas";
}

<h3>
    <span class="fa fa-shopping-cart" style="float:left"></span>
    &nbsp;&nbsp;Historial de Ventas
</h3>

<div class="col-md-7">
    <div class="input-group ">
        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
        @Html.TextBox("txtFilter", "", htmlAttributes: new { @class = "form-control" })
        <span class="input-group-btn">
            <button id="btnFilter" type="button" class="btn btn-warning" data-toggle="collapse" data-target="#divFilters" title="Mostras / ocultar filtros">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>
        </span>
    </div>
</div>
<div class="col-md-3">
    <h5>
        <label class="text-danger" id="lblTotalAmount"></label>
    </h5>
</div>
<div class="col-md-2">
    <h5>
        <label class="text-danger" id="lblTotalQuantity"></label>
    </h5>
</div>

<br /><br /><br />

<div id="divFilters" class="col-md-4  collapse">
    <div class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Sucursales", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.DropDownList("BranchId", Model.Branches, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-md-12">
                    @Html.Label("Desde", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.EditorFor(model => model.BeginDate, "", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Hasta", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.EditorFor(model => model.EndDate, "", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Cliente", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Client", "", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Folio", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Folio", "", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Usuario", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("User", "", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button class="btn btn-default" type="button" id="btnSearch" title="Buscar">
                    <span class="glyphicon glyphicon-search" />
                </button>
                <button class="btn btn-default" type="button"  title="Recargar página" onclick="Reload()">
                    <span class="glyphicon glyphicon-refresh" />
                </button>
            </div>
        </div>
    </div>
</div>


<div id="divSales">
    @Html.Partial("_SaleList",Model.Sales)
</div>
<script>
    $(document).ready(function ()
    {
        SetFilterControls("#divFilters", "#btnFilter", "#divSales");

        $("#btnSearch").click(function ()
        {
            ShowLoading();
            var data = {
                branchId: $("#BranchId").val(),
                beginDate: $("#BeginDate").val(),
                endDate: $("#EndDate").val(),
                folio: $("#Folio").val(),
                client: $("#Client").val(),
                user: $("#User").val()
            };
            ExecuteAjax('@Url.Action("Search")',data,function(view)
            {
                $("#divSales").html(view);
                HideLoading();
            });
            
        });
    });

    function Reload()
    {
        ShowLoading();
        window.location = '@Url.Action("Index")';
    }


</script>

