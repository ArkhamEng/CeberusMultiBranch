@model CerberusMultiBranch.Models.ViewModels.Operative.TransactionViewModel

@{
    ViewBag.Title = "Historial Compras";
}

<h3>
    <span class="fa fa-shopping-cart" style="float:left"></span>
    &nbsp;&nbsp;Mis ventas
</h3>

<div class="col-md-6">
    <div class="input-group ">
        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
        @Html.TextBox("txtName", "", htmlAttributes: new { @class = "form-control" })
        <span class="input-group-btn">
            <button class="btn btn-default" type="button" id="btnSearch" title="Buscar registros de ventas">
                <span class="glyphicon glyphicon-search" />
            </button>
            <button class="btn btn-default" type="button" id="btnClear" title="Recargar la página">
                <span class="glyphicon glyphicon-refresh" />
            </button>
            <button id="btnFilter" type="button" class="btn btn-warning" data-toggle="collapse" data-target="#divFilters">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>
        </span>
    </div>
</div>
<div class="col-md-6 text-right">
    
        <label class="text-danger alert alert-success" id="lblComission"></label>
    
</div>

<br /><br /><br />

<div id="divFilters" class="col-md-4  collapse">
    <div class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-12">
                    @Html.Label("Desde", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.EditorFor(model => model.BeginDate, "", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Hasta", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.EditorFor(model => model.EndDate, "", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Cliente", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Client", "", htmlAttributes: new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.Label("Folio", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                        @Html.TextBox("Folio", "", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="divMySales">
    @Html.Partial("_MySaleList",Model.Sales)
</div>
<script>
    $(document).ready(function ()
    {
        SetFilterControls("#divFilters", "#btnFilter", "#divMySales");

        $("#btnSearch").click(function ()
        {
            ShowLoading();
            var data = {
                beginDate: $("#BeginDate").val(),
                endDate: $("#EndDate").val(),
                folio: $("#Bill").val(),
                client: $("#Client").val()
            };

            ExecuteAjax('@Url.Action("SearchPerUser")',data,function(view)
            {
                $("#divMySales").html(view);
                HideLoading();
            });
        });

        $("#btnClear").click(function ()
        {
            ShowLoading();
            window.location = '@Url.Action("MySales")';
        });
    });


</script>

