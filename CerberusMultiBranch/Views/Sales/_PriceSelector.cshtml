

<div id="ModalPrice" class="modal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content panel panel-danger panel-group">
            <div class="modal-header panel-heading">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Ajusta el precio</h4>
            </div>
            <div class="modal-body panel-body">

                @Html.Hidden("txtProductId")
                @Html.Hidden("txtPrice")
                <div class="col-md-12">
                    @Html.Label("Precio Mostrador", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                        @Html.TextBox("txtSPrice", "", htmlAttributes : new { @class = "form-control", @readonly="true" } )
                        <span class="input-group-addon"><input type="checkbox" id="cbSPrice"  onchange="SetCheck(this,'#txtSPrice')" class="checkbox" ></span>
                    </div>
                </div>
                <div class="col-md-12">
                    @Html.Label("Precio Distribuidor", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                        @Html.TextBox("txtDPrice", "", htmlAttributes : new { @class = "form-control", @readonly = "true" } )
                        <span class="input-group-addon"><input type="checkbox" id="cbDPrice"  onchange="SetCheck(this,'#txtDPrice')" class="checkbox"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    @Html.Label("Precio Mayorista", htmlAttributes : new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                        @Html.TextBox("txtWPrice", "", htmlAttributes : new { @class = "form-control", @readonly = "true" } )
                        <span class="input-group-addon"><input type="checkbox" id="cbWPrice" onchange="SetCheck(this,'#txtWPrice')" class="checkbox"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" onclick="SetNewPrice()">
                    <span class="glyphicon glyphicon-ok"></span>
                    Aplicar
                </button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function ()
    {
       
    });

    function SetNewPrice()
    {
        var param = { productId: $("#txtProductId").val(), transactionId: $("#TransactionId").val(), price: $("#txtPrice").val() }
        console.log(param);
        ExecuteAjax('@Url.Action("SetNewPrice")', param, function (j)
        {
            if (j.Result != 'OK')
                ShowMessage(j.Result, j.Message, 'warning');
            else
                window.location = window.location;
        });
    }

    function SetCheck(cb,idPrice)
    {
        $("#txtPrice").val($(idPrice).val());
        $('.checkbox').not(cb).prop('checked', false);
    }

</script>