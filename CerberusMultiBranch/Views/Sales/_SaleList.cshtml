@model ICollection<CerberusMultiBranch.Models.Entities.Operative.Sale>
@using CerberusMultiBranch.Models.Entities.Operative
@using CerberusMultiBranch.Support

<table id="tbSales" class="table table-striped small">
    <thead>
        <tr hidden>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th class="col-xs-1"></th>
            <th class="col-xs-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label>Sucursal </label> <br /> @Html.DisplayFor(m => item.Branch.Name)<br />
                    <label>Agente  </label> <br /> @Html.DisplayFor(m => item.User.UserName)
                </td>
                <td>

                    <label>Folio  </label>   <br /> @Html.DisplayFor(m => item.Folio)<br />
                    <label>Cliente</label>  <br />@Html.DisplayFor(m => item.Client.Name)<br />
                </td>

                <td>
                    <label>Fecha Compra</label><br /> @item.TransactionDate.ToString("dd/MM/yyyy")<br />
                    <label>Fecha Expira</label> <br />@item.Expiration.ToString("dd/MM/yyyy")
                </td>

                <td>
                    @{ var debt = item.TotalTaxedAmount - item.SalePayments.Sum(p => p.Amount); }
                    <label>Total Venta</label><br /> @Html.DisplayFor(m => item.TotalTaxedAmount)<br />

                    <label>Pagos  </label> @item.SalePayments.Sum(p => p.Amount).ToMoney() <br />
                    <label>Adeudo </label> @debt.ToMoney()
                    
                </td>

                <td class="input-group text-uppercase col-xs-1">
                    @switch (item.TransactionType)
                    {
                        case CerberusMultiBranch.Models.Entities.Operative.TransactionType.Contado:
                            <div class="form-control alert-success input-sm">
                                @item.TransactionType.ToString()
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TransactionType.Credito:
                            <div class="form-control alert-danger input-sm">
                                @item.TransactionType.ToString()
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TransactionType.Preventa:
                            <div class="form-control alert-info input-sm">
                                @item.TransactionType.ToString()
                            </div>
                            break;
                    }
                    @switch (item.Status)
                    {
                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.InProcess:
                            <div class="form-control alert-dismissable input-sm">
                                Procesando
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Reserved:
                            <div class="form-control alert-info input-sm warning">
                                Reservado
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.PreCancel:
                            <div class="form-control alert-warning input-sm">
                                Devolución
                            </div>
                            break;

                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Compleated:
                            <div class="form-control alert-success input-sm">
                                Pagado
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Revision:
                            <div class="form-control alert-warning input-sm">
                                Parcial
                            </div>
                            break;
                        case CerberusMultiBranch.Models.Entities.Operative.TranStatus.Canceled:
                            <div class="form-control alert-danger input-sm">
                                Cancelado
                            </div>
                            break;
                    }
                </td>

                <td class="col-xs-1" align="center">
                    <button class="btn btn-primary" title="Ver detalle y editar"
                            onclick="ShowLoading(); window.location = '@Url.Action("Detail", new { id = item.SaleId })'">
                        <span class="fa fa-edit" />
                    </button>
                </td>
            </tr>
                        }
    </tbody>
    @{
        var totalCommision = Model.Sum(sale => sale.ComAmount);
        var totalAmount = Model.Sum(sale => sale.TotalTaxedAmount);
    }

</table>


<script>
    $(document).ready(function () {
        SetDataTable("#tbSales", "#txtFilter");

        var tAmount = "Ventas: " + GetCurrency(parseFloat('@totalAmount'));

        var tComission = "Comisiones: " + GetCurrency(parseFloat('@totalCommision'));

        $("#hCommision").text(tComission);
        $("#hTotal").text(tAmount);
    });


</script> 