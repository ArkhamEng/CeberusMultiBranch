@model IEnumerable<CerberusMultiBranch.Models.Entities.Operative.SaleDetail>
@using CerberusMultiBranch.Support

@*<script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>*@
<script src="~/Scripts/Table2Excel.js"></script>

<div class="panel panel-default">
    <div class="panel-body">
        <table id="tbSoldItemsShown" class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1"></th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Sale.Folio)
                    </th>
                    <th>
                        @Html.DisplayName("Códigos")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Product.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Quantity)
                    </th>
                    <th>
                        @Html.DisplayName("IVA")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Amount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Product.Images != null && item.Product.Images.Count > 0)
                            {
                                <img src="@item.Product.Images.First().Path" class="img-responsive" style="max-height:80px" />
                            }
                            else
                            {
                                <img src="~/Content/Images/sinimagen.jpg" class="img-responsive" style="max-height:80px" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sale.Folio)
                        </td>
                        <td>
                            <label>Código</label>
                            @Html.DisplayFor(modelItem => item.Product.Code)<br />
                            <label>Clave Sat</label>
                            @Html.DisplayFor(modelItem => item.Product.Category.SatCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Unit)
                        </td>
                        <td>
                            @item.Price.ToMoney()
                        </td>

                        <td align="center">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                          @item.TaxAmount.ToMoney()
                        </td>
                        >
                        <td>
                            @Html.DisplayFor(modelItem => item.TaxedAmount)
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>

<table id="tbSoldItems" class="table table-striped" style="display:none">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Folio venta")
            </th>
            <th>
                @Html.DisplayName("Código")
            </th>
            <th>
                @Html.DisplayName("Clave SAT")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Product.Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th>
                @Html.DisplayName("IVA")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Amount)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale.Folio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Code)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Product.Category.SatCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Unit)
                </td>
                <td>
                    @{ var iva = (item.Price / Cons.DeIVA); var priceBI = item.Price - iva; }

                    @priceBI.ToMoney()
                </td>
                <td>
                    @iva.ToMoney()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
                        }
    </tbody>
</table>

<iframe id="txtArea1" style="display:none"></iframe>

<script>
    $(document).ready(function () {
        Paginate("#tbSoldItemsShown", 20);

        $("#hAmount").text("Total " + '@Model.Sum(d=> d.Amount).ToMoney()')

        $("#hItems").text("Articulos " + '@Model.Sum(d=> d.Quantity)')
    });
    function ExportToExcel() {
        $("#tbSoldItems").table2excel({
            name: "Articulos",
            filename: "VentaDia-" + $("#Date").val() //do not include extension
        });
    }

    function ExportToExcel1() {
        var tab_text = "<table border='2px'><tr bgcolor='#87AFC6'>";
        var textRange; var j = 0;
        tab = document.getElementById('tbSoldItems'); // id of table
        txtArea1 = document.getElementById('txtArea1');

        for (j = 0 ; j < tab.rows.length ; j++) {
            tab_text = tab_text + tab.rows[j].innerHTML + "</tr>";
            //tab_text=tab_text+"</tr>";
        }

        tab_text = tab_text + "</table>";
        tab_text = tab_text.replace(/<A[^>]*>|<\/A>/g, "");//remove if u want links in your table
        tab_text = tab_text.replace(/<img[^>]*>/gi, ""); // remove if u want images in your table
        tab_text = tab_text.replace(/<input[^>]*>|<\/input>/gi, ""); // reomves input params

        var ua = window.navigator.userAgent;
        var msie = ua.indexOf("MSIE ");

        if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))      // If Internet Explorer
        {
            txtArea1.document.open("txt/html", "replace");
            txtArea1.document.write(tab_text);
            txtArea1.document.close();
            txtArea1.focus();
            sa = txtArea1.document.execCommand("SaveAs", true, "Say Thanks to Sumit.xls");
        }
        else                 //other browser not tested on IE 11
            sa = window.open('data:application/vnd.ms-excel,' + encodeURIComponent(tab_text));

        return (sa);
    }
</script>