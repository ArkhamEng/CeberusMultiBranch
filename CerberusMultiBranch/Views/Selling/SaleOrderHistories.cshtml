@model IEnumerable<CerberusMultiBranch.Models.Entities.Operative.SaleHistory>
@using CerberusMultiBranch.Support;

<table class="table table-striped small" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsDate)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayUpperFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayUpperFor(modelItem => item.TotalDue)
                </td>
                <td>
                    @Html.DisplayUpperFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayUpperFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayUpperFor(modelItem => item.InsDate)
                </td>
            </tr>
        }
    </tbody>
</table>
