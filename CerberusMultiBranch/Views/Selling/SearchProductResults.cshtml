@model IEnumerable<SearchProductResultViewModel>

@using CerberusMultiBranch.Support
@using CerberusMultiBranch.Models.ViewModels.Catalog


<table id="tbSearchProductResults" class="table dt-responsive  table-bordered small" style="width:100%">
    <thead>
        <tr>
            <th class="hidden"></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.StorePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td class="hidden">
                    @Html.HiddenFor(modelItem => product.ProductId)
                    @Html.HiddenFor(modelItem => product.Code)
                    @Html.HiddenFor(modelItem => product.Name)
                    @Html.HiddenFor(modelItem => product.Stock)
                    @Html.HiddenFor(modelItem => product.Image)
                    @Html.HiddenFor(modelItem => product.StorePrice)
                    @Html.HiddenFor(modelItem => product.DealerPrice)
                    @Html.HiddenFor(modelItem => product.WholesalerPrice)
                    @Html.HiddenFor(modelItem => product.OrderQty)
                    @Html.HiddenFor(modelItem => product.SellQty)
                </td>
                <td style="max-width:50px">
                    <img src="@product.Image" class="img img-responsive" />
                </td>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => product.Code)
                </td>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td class="text-lowercase">
                    @Html.DisplayFor(modelItem => product.Stock)
                </td>
                <td  class="text-uppercase">
                    @Html.DisplayFor(modelItem => product.StorePrice)
                </td>
                <td>
                    <button type="button" class="btn btn-primary btn-xs pull-right" id="btnSelectProduct">
                        <span class="fa fa-plus"></span>
                        Agregar
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>
