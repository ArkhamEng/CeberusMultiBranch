@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.Partial("_BranchOption")
            </li>

           
            @if (User.IsInRole("Vendedor"))
            {
                <li>
                    @Html.Partial("_CartOption")
                </li>
            }
           
            <li>
                <a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()"
                   style="color:whitesmoke !important;">
                    &nbsp;Salir
                    <span class="glyphicon glyphicon-log-out" style="float:left"></span>
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
