

<div id="ModalQuickClient" class="modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content panel panel-danger panel-group">
            <div class="modal-header panel-heading">
                <h4 class="modal-title">Búsqueda rápida de clientes</h4>
            </div>
            <div class="panel panel-danger">
                <div class="panel-body row">
                    <div class="col-md-8">
                        @Html.Label("Nombre Cliente / Clave", htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-filter"></i></span>
                            @Html.TextBox("FClientName", "", htmlAttributes: new { @class = "form-control" })
                            <span class="input-group-btn">
                                <button id="btnQuickSearchClient" type="button" class="btn btn-default">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                                <button id="btnAddClient" type="button" class="btn btn-warning" onclick="window.open('@Url.Action("Create","Clients")','blank')">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-danger">
                <div class="panel-body row" id="divClientList">
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        $("#btnQuickSearchClient").click(function () { QuickSearchClient(); });
    });


    function QuickSearchClient()
    {
        HalfProgress();
        var filter = {  name: $("#FClientName").val() }

        ExecuteAjax('@Url.Action("QuickSearch", "Clients")', filter, function (view)
        {
            $("#divClientList").html(view);
        });
    }

</script>
