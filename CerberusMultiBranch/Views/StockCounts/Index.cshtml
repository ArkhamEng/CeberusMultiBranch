@model CerberusMultiBranch.Models.ViewModels.Inventory.StockCountsViewModel

@{
    ViewBag.Title = "Recuentos de existencias ";
    ViewBag.Class = "fa fa-dropbox";

}
@Scripts.Render("~/bundles/StockCounts")
@*@Scripts.Render("~/bundles/Searches")*@
@*@Scripts.Render("~/bundles/SearchProduct")*@


<div class="container">
    <div id="pnlFilters" class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-3">
                    <label class="control-label" for="Name">Sucursal</label>
                    <div class="input-group">
                        @Html.DropDownListFor(m => m.Branches, new SelectList(Model.Branches, "Id","Name", Model.Branches.First().Id),
                            new { id="Branches" ,@class = "form-control text-uppercase input-sm" })

                    </div>
                </div>

                <div class="col-lg-3">
                    <label class="control-label" for="Name">Categoría</label>
                    <div class="input-group">
                        @Html.DropDownListFor(m => m.Branches, new SelectList(Model.Systems, "Id","Name", Model.Branches.First().Id),
                            new { id= "Systems", @class = "form-control text-uppercase input-sm" })

                    </div>
                </div>


                <div class="col-lg-3">
                    <label class="control-label" for="Name">Nombre</label>
                    <div class="input-group">
                        <input class="form-control valid" data-val="true" data-val-required="Es necesario agregar un nombre" id="Name" name="Name" type="text" value="">
                    </div>
                </div>
                <div class="col-lg-3">
                    <label class="control-label" for="Name">Fecha de Inicio</label>
                    <div class="input-group">
                        @Html.Label(@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss"), new { id="BeginDate"})

                        @*<label class="control-label" id="BeginDate"  @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss") </label>*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <label class="control-label" for="Name">Observación</label>
                    <div class="input-group" style="width:100%">
                        @Html.TextArea("Observaciones", "", new { id = "Observations", rows = "3", @class = "textwrapper" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <label class="control-label" for="Name">Producto</label>
                    <div class="input-group">
                        <input class="form-control input-sm text-uppercase" placeholder="Clave o nombre de producto" style="width:100% !important" id="ProductFilter" name="ProductFilter" type="text">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-sm" id="btnBegingSearchProduct" tooltip-title="Agregar Productos">
                                <i id="iSearchProduct" class="fa fa-plus"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-9"></div>
                <div class="col-lg-3" style="margin-top:5px">
                    <button type="button" class="btn btn-danger" id="btnCancel" value="Submit">
                        <span class="glyphicon  glyphicon-file"></span>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-success" id="btnAccept" title="Registro Producto">
                        <span class="glyphicon  glyphicon-file"></span>
                        Aceptar
                    </button>
                </div>

            </div>
            <div class="row">
                <table class="table table-striped tableg" id="DivGrid">
                    <thead class="thead">
                        <tr>
                            <th style="width:200px;text-align:center">Código</th>
                            <th style="width:500px;text-align:center">Descripción</th>
                            <th style="width:200px;text-align:center">Costo Unitario</th>
                            <th style="width:200px;text-align:center">Existencias</th>
                            <th style="width:200px;text-align:center">Existencia real</th>
                            <th style="width:200px;text-align:center">Varianza</th>
                            <th style="width:200px;text-align:center">Costo Varianza</th>
                            <th style="width:50px;text-align:center"></th>
                        </tr>
                    </thead>
                    <tbody class="tbody" id="contenido"></tbody>
                    <tfoot class="tfood">
                        <tr>
                            <th style="width:200px;text-align:center"></th>
                            <th style="width:500px;text-align:center"></th>
                            <th style="width:200px;text-align:center"></th>
                            <th style="width:200px;text-align:center"></th>
                            <th style="width:200px;text-align:center"></th>
                            <th style="width:200px;text-align:center"> <label class="control-label" id="TVar" style="width:auto; text-align:center"></label></th>
                            <th style="width:200px;text-align:center"> <label class="control-label" id="TCosVar" style="width:auto; text-align:center"></label></th>
                            <th style="width:50px;text-align:center"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
</div>

