@model CerberusMultiBranch.Models.ViewModels.Inventory.StockCountsHistoryViewModel
@{
    ViewBag.Title = "Histórico de Recuentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/StockCountsHistory")

<div style="padding-top:20px">
    <div class="panel panel-danger">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-4">
                    @Html.DropDownListFor(m => m.Branches, new SelectList(Model.Branches, "Id","Name", Model.Branches.First().Id),
                                      new { id= "BranchId", @class = "form-control text-uppercase input-sm" })

                </div>
                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-addon"><a>Fecha Inicial</a></span>
                        @Html.EditorFor(m => m.BeginDateTime, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="input-group">
                        <span class="input-group-addon"><a>Fecha final</a></span>
                        @Html.EditorFor(m => m.EndDateTime, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-12" style="text-align:right">
                    @*<span class="input-group-btn">*@
                    <button class="btn btn-info" type="button" onclick="Reload()" id="btnClear" title="Limpiar la busqueda">
                        <span class="glyphicon glyphicon-refresh"></span>
                        Limpiar
                    </button>
                    <button class="btn btn-primary" type="button" id="btnSearch" title="Buscar" style="margin-left:10px">
                        <span class="glyphicon glyphicon-search"></span>
                        Buscar
                    </button>
                    @*</span>*@
                </div>
            </div>

        </div>
    </div>
    
</div>

<div class="panel panel-default">
    <div class="panel-body dtContainer" id="divStockCountsList">
        @Html.Partial("_StockCountsHistory", Model.StockCounts)

    </div>
</div>

